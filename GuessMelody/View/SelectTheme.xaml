<Window x:Class="GuessMelody.View.SelectTheme"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewmodel="clr-namespace:GuessMelody.ViewModel"
      xmlns:local="clr-namespace:GuessMelody.View"
      mc:Ignorable="d" 
      Title="Выбор темы" Height="250" Width="450" Background="LightGray" x:Name="SelectThemeForm">
    <Window.DataContext>
        <viewmodel:ViewSelectTheme x:Name="viewSelectTheme"/>
    </Window.DataContext>
    <Grid>
        <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding Themes}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Доступные темы" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button CommandParameter="{Binding ElementName=SelectThemeForm}" IsDefault="True" Margin="5,0,5,0" Width="60" FontSize="15" Command="{Binding OkSelectTheme}">Ок</Button>
            <Button CommandParameter="{Binding ElementName=SelectThemeForm}" IsCancel="True" Margin="5,0,5,0" Width="60" FontSize="15" Command="{Binding CanselSelectTheme}">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
